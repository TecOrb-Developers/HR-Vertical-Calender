<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="CalendarCard"/>
    <style name="CalendarCard.Day">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey_black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="CalendarCard.CellTextView">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/calendar_cell_text_color</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_drawable</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    
    <style name="DateText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/widget_padding_small</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/grey_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>
